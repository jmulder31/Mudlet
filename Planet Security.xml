			<Alias isActive="yes" isFolder="no">
				<name>Planetary AI Check</name>
				<script>gagshowplanet = true
pSec.Enabled = true

for i = 1, #pSec.planets do
  send("showplanet "..pSec.planets[i].." ai", false)
  tempTimer(1, [[gagshowplanet = false]])
end

cecho("\n&lt;dodger_blue&gt;---Initiating Planet Scan---\n")
tempTimer(1, [[cecho("\n&lt;dodger_blue&gt;---Planet Scan Complete---\n")]])
tempTimer(2, [[pSec.Enabled = false]])</script>
				<command></command>
				<packageName></packageName>
				<regex>^pSecScan$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>Planetary AI All Check</name>
				<script>gagshowplanet = true
pSec.Enabled = true

for i = 1, #pSec.fullPlanets do
  send("showplanet "..pSec.fullPlanets[i].." ai", false)
  tempTimer(#pSec.fullPlanets / 2, [[gagshowplanet = false]])
end

cecho("\n&lt;dodger_blue&gt;---Initiating Planet Scan---\n")
tempTimer(5, [[cecho("\n&lt;dodger_blue&gt;---Planet Scan Complete---\n")]])
tempTimer(10, [[pSec.Enabled = false]])</script>
				<command></command>
				<packageName></packageName>
				<regex>^pSecAll$</regex>
			</Alias>
			<Alias isActive="yes" isFolder="no">
				<name>Planet Add</name>
